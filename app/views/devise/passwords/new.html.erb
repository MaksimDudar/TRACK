<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2>Забыли пароль?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mb-1 w-25" %>
  </div>

  <div class="actions">
    <%= f.submit "Пришлите мне инструкции по сбросу пароля", class:"btn btn-secondary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
    </div>
  </div>
</div>
