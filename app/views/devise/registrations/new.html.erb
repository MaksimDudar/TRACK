<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2>Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mb-1 w-25" %>
  </div>

  <div class="field">
  <%= f.label :username, "Имя" %><br />
  <%= f.text_field :username, autocomplete: "username", class:"form-control mb-1 w-25"  %>
</div>

  <div class="field">
    <%= f.label :password, "Пароль" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> знаков минимум)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control mb-1 w-25" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Повторите пароль" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control mb-1 w-25" %>
  </div>

  <div class="actions">
    <%= f.submit 'Сохранить', class:"btn btn-sm btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
    </div>
  </div>
</div>
